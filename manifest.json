{
  "manifest_version": 3,
  "name": "東方の三賢者",
  "version": "1.2025.814.1637",
  "description": "ChatGPT、Claude、Grokの3つのAIに同時に質問を送信",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "clipboardWrite",
    "activeTab"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://grok.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://grok.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}